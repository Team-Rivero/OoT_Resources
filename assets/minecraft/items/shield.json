{
  "model": {
    "type": "condition",

    "on_false": {
      "type": "select",
      "property": "custom_model_data",
  
      "fallback": {
        "type": "model",
        "model": "item/shield"
      },
      
      "cases": [
        {
          "when": "deku_shield",
          "model": {
            "type": "model",
            "model": "block/deku_shield"
          }
        },
        {
          "when": "hylian_shield",
          "model": {
            "type": "model",
            "model": "block/hylian_shield"
          }
        },
        {
          "when": "mirror_shield_base",
          "model": {
            "type": "model",
            "model": "block/mirror_shield"
          }
        },
        {
          "when": "mirror_shield_fire",
          "model": {
            "type": "model",
            "model": "block/mirror_shield_fire"
          }
        },
        {
          "when": "mirror_shield_ice",
          "model": {
            "type": "model",
            "model": "block/mirror_shield_ice"
          }
        }
      ]
    },

    "on_true": {
      "type": "select",
      "property": "custom_model_data",
  
      "fallback": {
        "type": "model",
        "model": "item/shield"
      },
      
      "cases": [
        {
          "when": "deku_shield",
          "model": {
            "type": "model",
            "model": "block/deku_shield_blocking"
          }
        },
        {
          "when": "hylian_shield",
          "model": {
            "type": "model",
            "model": "block/hylian_shield_blocking"
          }
        },
        {
          "when": "mirror_shield_base",
          "model": {
            "type": "model",
            "model": "block/mirror_shield_blocking"
          }
        },
        {
          "when": "mirror_shield_fire",
          "model": {
            "type": "model",
            "model": "block/mirror_shield_fire_blocking"
          }
        },
        {
          "when": "mirror_shield_ice",
          "model": {
            "type": "model",
            "model": "block/mirror_shield_ice_blocking"
          }
        }
      ]
    },
    
    "property": "using_item"
  }
}