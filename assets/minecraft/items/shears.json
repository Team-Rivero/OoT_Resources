{
  "model": {
    "type": "select",
    "property": "custom_model_data",
    "fallback": {
      "type": "model",
      "model": "item/shears"
    },
    "cases": [
      {
        "when": "slingshot",
        "model": {
          "type": "model",
          "model": "item/slingshot"
        }
      },
      {
        "when": "broken_knife",
        "model": {
          "type": "model",
          "model": "item/broken_knife"
        }
      }
    ]
  }
}